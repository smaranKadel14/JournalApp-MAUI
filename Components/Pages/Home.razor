@page "/"
@using JournalApp.Services
@inject UserService UserSession
@inject NavigationManager Nav

<div class="landing-container">
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-background"></div>
        <div class="hero-content">
            <div class="hero-text">
                <h1 class="hero-title">Your Personal Journal</h1>
                <p class="hero-subtitle">Capture your thoughts, track your emotions, and preserve your memories in one beautiful space</p>
                
                @if (!UserSession.IsLoggedIn)
                {
                    <div class="cta-buttons">
                        <button class="btn-primary" @onclick="GoToSignup">
                            Start Your Journey
                        </button>
                        <button class="btn-secondary" @onclick="GoToLogin">
                            Sign In
                        </button>
                    </div>
                }
                else
                {
                    <div class="welcome-back">
                        <h2>Welcome back, @UserSession.CurrentUsername!</h2>
                        <button class="btn-primary" @onclick="GoToDashboard">
                            Go to Dashboard
                        </button>
                    </div>
                }
            </div>
            
            <div class="hero-visual">
                <div class="journal-image-container">
                    <img src="/images/journal.png" alt="Journal App" class="journal-image" />
                    <div class="image-overlay"></div>
                </div>
            </div>
        </div>
    </section>

    @if (!UserSession.IsLoggedIn)
    {
        <section class="features-section">
            <div class="container">
                <h2 class="section-title">Why Choose Your Journal?</h2>
                <div class="features-grid">
                    <div class="feature-card">
                        <div class="feature-icon">📝</div>
                        <h3>Write Freely</h3>
                        <p>Express yourself without limits with our rich text editor and intuitive interface</p>
                    </div>
                    
                    <div class="feature-card">
                        <div class="feature-icon">📊</div>
                        <h3>Track Your Mood</h3>
                        <p>Monitor your emotional patterns and gain insights into your mental wellbeing</p>
                    </div>
                    
                    <div class="feature-card">
                        <div class="feature-icon">🏷️</div>
                        <h3>Organize with Tags</h3>
                        <p>Categorize your thoughts and find entries easily with smart tagging system</p>
                    </div>
                    
                    <div class="feature-card">
                        <div class="feature-icon">📅</div>
                        <h3>Calendar View</h3>
                        <p>Navigate through your entries with an intuitive calendar interface and track your writing consistency</p>
                    </div>
                    
                    <div class="feature-card">
                        <div class="feature-icon">🔒</div>
                        <h3>Private & Secure</h3>
                        <p>Your personal thoughts are protected with secure authentication and private storage</p>
                    </div>
                    
                    <div class="feature-card">
                        <div class="feature-icon">📈</div>
                        <h3>Analytics Dashboard</h3>
                        <p>Get detailed insights about your writing habits, mood trends, and personal growth over time</p>
                    </div>
                </div>
                
                <div class="cta-section">
                    <h3>Ready to start your journaling journey?</h3>
                    <button class="btn-primary btn-large" @onclick="GoToSignup">
                        Get Started Now - It's Free
                    </button>
                </div>
            </div>
        </section>
    }

    <footer class="landing-footer">
        <div class="container">
            <p>&copy; 2024 Your Journal. Your personal space for thoughts and memories.</p>
        </div>
    </footer>
</div>

@code {
    private void GoToSignup()
    {
        Nav.NavigateTo("/signup");
    }
    
    private void GoToLogin()
    {
        Nav.NavigateTo("/login");
    }
    
    private void GoToDashboard()
    {
        Nav.NavigateTo("/dashboard");
    }
}
