@*
    Tag Picker Component - Tag Selection and Management
    ================================================
    Purpose: Allows users to select existing tags and create custom tags for journal entries
    
    Tag Selection Features:
    - Prebuilt tags selection with visual feedback
    - Custom tag creation with input field
    - Multiple tag selection support
    - Selected tags display with removal option
*@
@using Microsoft.AspNetCore.Components.Web

<!-- Tag Selection Component -->
<div class="field">
    <!-- Prebuilt Tags Cloud -->
    <div class="tag-cloud">
        @foreach (var tag in PrebuiltTags)
        {
            var selected = SelectedTags.Contains(tag);

            <button type="button"
                    class="tag-btn @(selected ? "selected" : "")"
                    @onclick="@(() => ToggleTag(tag))">
                @tag
            </button>
        }
    </div>

    <!-- Custom Tag Input -->
    <div class="tag-add">
        <input class="input"
               type="text"
               placeholder="Add a custom tag"
               @bind="CustomTag"
               @onkeydown="OnCustomTagKeyDown" />

        <button type="button" class="tag-add-btn" @onclick="AddCustomTag">
            Add
        </button>
    </div>

    <!-- Selected Tags Display -->
    @if (SelectedTags.Count > 0)
    {
        <div class="selected-tags">
            @foreach (var t in SelectedTags)
            {
                <span class="selected-tag">
                    @t
                    <button type="button" class="tag-remove" @onclick="@(() => RemoveTag(t))">×</button>
                </span>
            }
        </div>
    }
</div>

@code {
    /// <summary>
    /// Prebuilt tags available for selection
    /// </summary>
    [Parameter] public List<string> PrebuiltTags { get; set; } = new();

    /// <summary>
    /// Currently selected tags
    /// </summary>
    [Parameter] public List<string> SelectedTags { get; set; } = new();
    
    /// <summary>
    /// Event callback for selected tags changes
    /// </summary>
    [Parameter] public EventCallback<List<string>> SelectedTagsChanged { get; set; }

    /// <summary>
    /// Custom tag input value
    /// </summary>
    private string CustomTag { get; set; } = "";

    /// <summary>
    /// Toggles a tag selection
    /// </summary>
    /// <param name="tag">Tag to toggle</param>
    private async Task ToggleTag(string tag)
    {
        var list = SelectedTags?.ToList() ?? new List<string>();

        if (list.Contains(tag)) list.Remove(tag);
        else list.Add(tag);

        await SelectedTagsChanged.InvokeAsync(list);
    }

    /// <summary>
    /// Removes a tag from selection
    /// </summary>
    /// <param name="tag">Tag to remove</param>
    private async Task RemoveTag(string tag)
    {
        var list = SelectedTags?.ToList() ?? new List<string>();
        list.Remove(tag);
        await SelectedTagsChanged.InvokeAsync(list);
    }

    /// <summary>
    /// Adds a custom tag to selection
    /// </summary>
    private async Task AddCustomTag()
    {
        var tag = (CustomTag ?? "").Trim();
        if (string.IsNullOrWhiteSpace(tag)) return;

        var list = SelectedTags?.ToList() ?? new List<string>();

        if (!list.Any(t => t.Equals(tag, StringComparison.OrdinalIgnoreCase)))
            list.Add(tag);

        CustomTag = "";
        await SelectedTagsChanged.InvokeAsync(list);
    }

    /// <summary>
    /// Handles Enter key press in custom tag input
    /// </summary>
    private async Task OnCustomTagKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
            await AddCustomTag();
    }
}
