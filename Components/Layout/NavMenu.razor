@using JournalApp.Services
@inject UserService UserSession
@inject NavigationManager Nav

<div class="nav-scrollable">
    <nav class="flex-column">

        <!-- Always show Home -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        @if (!UserSession.IsLoggedIn)
        {
            <!-- Show these only if NOT logged in -->
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="login">
                    <span class="bi bi-person-fill" aria-hidden="true"></span> Login
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="signup">
                    <span class="bi bi-person-plus-fill" aria-hidden="true"></span> Signup
                </NavLink>
            </div>
        }
        else
        {
            <!-- Show these only if logged in -->
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="new-entry">
                    <span class="bi bi-pencil-square" aria-hidden="true"></span> New Entry
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <!-- Use a button for logout click -->
                <button class="nav-link btn btn-link p-0" style="cursor:pointer" @onclick="Logout">
                    <span class="bi bi-box-arrow-right" aria-hidden="true"></span> Logout
                </button>
            </div>
        }
    </nav>
</div>

@code {
    private void Logout()
    {
        // Clear the session properly
        UserSession.Logout();

        // Redirect to login page (or home if you want)
        Nav.NavigateTo("/login", forceLoad: false);
    }
}
